<div class="container">

    <h2><%= @post.title %></h2>
    <p><%= @post.body %></p>
    <h2><%= link_to "Edit Post", edit_post_path(post_id: @post.post_id), class: "btn btn-primary"%></h2>
    <h2><%= link_to "Delete Entry", post_path(post_id: @post.post_id), method: :delete, data: {confirm: "Delete blog entry?"}, class:"btn btn-danger" %></h2>

    <hr>
  </div>

