<% if @post.errors.any? %>
  <% @post.errors.full_messages.each do |error| %>
    <p class="alert alert-danger"><strong>Input Error: <%= error %></strong></p>
  <% end %>
<% end %>

<%= form_for @post do |post| %>
  <div class="form-group">
    <%= post.label :title %>
    <%= post.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= post.label :body %>
    <%= post.text_field :body, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= post.label :post_id %>
    <%= post.text_field :post_id, class: "form-control" %>
  </div>

  <div class="">
    <%= post.submit class: "btn btn-primary" %>
  </div>

<% end %>
